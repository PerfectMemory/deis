[Unit]
Description=deis-router
After=docker.service
Requires=docker.service
Requires=docker-tcp.socket

[Service]
ExecStart=/bin/bash -c '/usr/bin/docker start -a deis-router || /usr/bin/docker run --name deis-router -P -e HOST=10.1.42.1 -e ETCD=10.1.42.1:4001 deis/router'
ExecStop=/usr/bin/docker stop deis-router

[Install]
WantedBy=multi-user.target