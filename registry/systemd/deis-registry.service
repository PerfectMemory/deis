[Unit]
Description=deis-registry
After=docker.service
Requires=docker.service
Requires=docker-tcp.socket

[Service]
ExecStart=/bin/bash -c '/usr/bin/docker start -a deis-registry || /usr/bin/docker run --name deis-registry -P -e HOST=10.1.42.1 -e ETCD=10.1.42.1:4001 deis/registry'
ExecStop=/usr/bin/docker stop deis-registry

[Install]
WantedBy=multi-user.target